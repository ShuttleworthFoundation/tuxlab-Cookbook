DIV.example-output    {
	padding-left: 15px;
	border-style: solid;
	border-width: 0px;
	border-left-width: 2px;
	border-color: black;
}

pre.screen    {
	background: #E8E8E8;
}

pre.programlisting    {
	background: #E8E8E8;
}

div.example-source    {
	background: #E8E8E8;
}

p.publisher    {
	text-align: center;
}

body.book    {
}

div.component-title    {
	text-align: right;
}

h1, h2, h3, h4, h5, h6    {
	font-family: sans-serif;
}

h1.label    {
	font-size: 150pt;
	font-weight: normal;
	font-family: sans-serif;
	margin-bottom: 0px;
	padding-bottom: 0px;
	margin-top: 0px;
	padding-top: 0px;
}

div.component-title h1.title    {
	font-family: sans-serif;
	margin-top: 0px;
	padding-top: 0px;
	margin-right: 20px;
	font-size: 36pt;
}

p.alpha-version    {
	margin-top: 0px;
	padding-top: 0px;
}

hr.component-separator    {
	height: 1px;
}

div.refentry div.titlepage    {
	margin-left: 20px;
}

div.refentry div.titlepage h1.title    {
	margin-left: -20px;
	margin-bottom: 0px;
	font-size: 36pt;
}

body    {
	font-family: sans-serif;
	margin-top: 0px;
	padding-top: 0px;
	margin-left: 10px;
	margin-right: 10px;
	padding-left: 0px;
	padding-right: 0px;
}

div.navheader    {
	padding-top: 2px;
	background-color: #FAFFD2;
	padding-right: 2px;
	border-bottom-style: solid;
	border-bottom-width: 0px;
	margin-bottom: 0px;
	margin-top: 2px;
}
div.navheader a:link, div.navheader a:visited {
    text-decoration: none;
    color: #FAFFD2;
}

div.navfooter    {
	background-color: #FAFFD2;
	margin-bottom: 0px;
	margin-top: 2px;
	padding-bottom: 0px;
	padding-left: 2px;
	padding-right: 2px;
	border-top-style: solid;
	border-top-width: 0px;
	padding-top: 0px;
}
div.navfooter a:link , div.navfooter a:visited {
    text-decoration: none;
    color: #FAFFD2;
}

div.copyrightfooter    {
	background-color: #c6bec6;
	margin-top: 0px;
	padding-top: 0px;
	padding-left: 10px;
	padding-right: 10px;
	padding-bottom: 2px;
}

div.copyrightfooter p    {
	margin-top: 0px;
	padding-top: 10px;
}

div.refentry, div.preface, div.chapter, div.appendix, div.reference, div.part, div.bibliography, div.glossary, div.index, div.colophon, div.legalnotice    {
	margin-left: 10px;
	margin-right: 10px;
}

div.book    {
	margin-left: 10px;
	margin-right: 10px;
	margin-top: 5px;
}

thead    {
	background-color: black;
	color: white;
}

table, tbody, thead, tfoot, tr, td    {
	border-color: #8F8F8F;
	border-spacing: 0;
}

/* 
	we don't want any borders around images unless this
	overridden
*/

img {
	border: none;
}

pre.programlisting { 
	background-color: #E0E0E0; 
}
}